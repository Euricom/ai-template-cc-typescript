{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials.json)",
      "Read(./**/credentials.*.json)",
      "Read(./**/*.key)",
      "Read(./**/*.pem)",
      "Read(./**/*.cer)"
    ],
    "allow": [
      "Bash(ghx:*)",
      "Bash(rg:*)"
      "Bash(mkdir:*)",
      "Bash(uv:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(npm:*)",
      "Bash(bun:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(chmod:*)",
      "Bash(touch:*)"
      "Write",
      "Edit",
    ],
    "deny": []
  }
}
